<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles/global.css">
  <link rel="stylesheet" href="/styles/players.css">
  <title>NBA Fantasy - Players</title>
</head>
<body>
    <%- include("../partials/navbar.ejs") %>

    <main class="main-content">
        <!-- Player Search Section -->
        <section id="search-players">
            <h2>Search Players</h2>
            <form action="/players" method="GET" class="search-form">
                <label for="team">Team ID:</label>
                <input type="number" id="team" name="team" placeholder="Enter team ID" required>
        
                <!-- Hidden input field for season -->
                <input type="hidden" id="season" name="season" value="2024">
                <button type="submit">Search</button>
            </form>
        </section>
        

        <!-- Players List Section -->
        <section id="players-list">
            <h2>Player List</h2>
            <div class="player-cards">
                <% if (players && players.length) { %>
                    <% players.forEach(player => { %>
                        <div class="player-card">
                            <h3><%= player.firstname %> <%= player.lastname %></h3>
                            <p>Position: <%= player.leagues.standard?.pos || "N/A" %></p>
                            <p>Height: <%= player.height.feets || "N/A" %>' <%= player.height.inches || "" %></p>
                            <p>Weight: <%= player.weight.pounds || "N/A" %> lbs</p>
                            <p>College: <%= player.college || "N/A" %></p>
                            <p>Team Jersey: <%= player.leagues.standard?.jersey || "N/A" %></p>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p>No players found for the specified team and season.</p>
                <% } %>
            </div>
        </section>
    </main>

    <%- include("../partials/footer.ejs") %>
</body>
</html>
