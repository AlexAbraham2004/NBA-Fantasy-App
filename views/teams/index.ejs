<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>NBA Teams</title>
    <link rel="stylesheet" href="/styles/global.css">
    <link rel="stylesheet" href="/styles/teams.css">
</head>
<body>
    <%- include('../partials/navbar.ejs') %>

    <main class="teams-page">
        <h1>NBA Teams</h1>

        <!-- Eastern Conference Section -->
        <section class="conference-section">
            <h2>Eastern Conference</h2>
            <div class="teams-container">
                <% teams.forEach(team => { %>
                    <% if (team.leagues.standard.conference === "East") { %>
                        <form action="/teams/<%= team.id %>/players" method="GET">
                            <button class="team-card">
                                <img src="<%= team.logo %>" alt="<%= team.name %> Logo">
                                <p><%= team.name %></p>
                            </button>
                        </form>
                    <% } %>
                <% }) %>
            </div>
        </section>

        <!-- Western Conference Section -->
        <section class="conference-section">
            <h2>Western Conference</h2>
            <div class="teams-container">
                <% teams.forEach(team => { %>
                    <% if (team.leagues.standard.conference === "West") { %>
                        <form action="/teams/<%= team.id %>/players" method="GET">
                            <button class="team-card">
                                <img src="<%= team.logo %>" alt="<%= team.name %> Logo">
                                <p><%= team.name %></p>
                            </button>
                        </form>
                    <% } %>
                <% }) %>
            </div>
        </section>
    </main>

    <%- include('../partials/footer.ejs') %>
</body>
</html>
