<div id="player-modal" class="modal">
  <div class="modal-content">
      <span class="close-btn">&times;</span>
      <div id="player-details" class="player-container">

          <!-- Left Side: Player Image Placeholder -->
          <div class="player-image"></div>

          <!-- Right Side: Player Info -->
          <div class="player-info">
              <h1 id="player-name" class="player-name"></h1>
              <p id="player-team" class="player-team"></p>
              <p id="player-positions" class="player-positions"></p>
              <!-- Jersey Number -->
              <p id="player-jersey" class="player-jersey">Jersey: -</p>

              <p id="player-ranking" class="player-ranking">Ranking: -</p>

              <!-- Team Logo -->
              <img id="player-logo" src="" alt="Team Logo" class="player-logo" />

          </div>
      </div>

      <!-- Season Averages Log Section -->
      <div class="season-log">
          <h3>Season Averages</h3>
          <table>
              <thead>
                  <tr>
                      <th>Season</th>
                      <th>Points</th>
                      <th>Minutes</th>
                      <th>Rebounds</th>
                      <th>Assists</th>
                      <th>Steals</th>
                      <th>Blocks</th>
                      <th>Turnovers</th>
                  </tr>
              </thead>
              <tbody id="season-log-body"></tbody>
          </table>
      </div>

      <!-- Game Log Section -->
      <div class="game-log">
          <h3>Recent Games</h3>
          <table>
              <thead>
                  <tr>
                      <th>Date</th>
                      <th>Points</th>
                      <th>Minutes</th>
                      <th>Rebounds</th>
                      <th>Assists</th>
                      <th>Steals</th>
                      <th>Blocks</th>
                      <th>Turnovers</th>
                  </tr>
              </thead>
              <tbody id="game-log-body"></tbody>
          </table>
      </div>
  </div>
</div>
