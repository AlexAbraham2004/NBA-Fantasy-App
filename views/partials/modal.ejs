<div id="player-modal" class="modal">
    <div class="modal-content">
      <span class="close-btn">&times;</span>
      <div id="player-details">
        <!-- Player Header -->
        <div class="player-header">
          <img id="player-logo" src="" alt="Player Logo" class="player-logo" />
          <div>
            <h2 id="player-name" class="player-name"></h2>
            <p id="player-team" class="player-team"></p>
            <!-- Positions (if any) appear here -->
            <p id="player-positions" class="player-positions" style="font-weight: bold;"></p>
          </div>
        </div>
  
        <!-- Game Log Section -->
        <div class="game-log">
          <h3>Recent Games</h3>
          <table>
            <thead>
              <tr>
                <th>Date</th>
                <th>Points</th>
                <th>Minutes</th>
                <th>Rebounds</th>
                <th>Assists</th>
                <th>Steals</th>
                <th>Blocks</th>
                <th>Turnovers</th>
              </tr>
            </thead>
            <tbody id="game-log-body"></tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  